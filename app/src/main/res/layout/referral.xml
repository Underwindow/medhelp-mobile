<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/referralCard"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:paddingTop="20dp"
    android:paddingHorizontal="15dp">

    <TextView
        android:id="@+id/referralDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="28 окт, ср"
        android:textSize="17sp"
        android:textStyle="normal"
        android:textColor="@color/darkgray"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="8dp"
        android:background="@color/white"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingVertical="10dp"
            android:paddingHorizontal="15dp">

            <TextView
                android:id="@+id/referralTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="08:50"
                android:textSize="15sp"
                android:textStyle="normal"
                android:textColor="@color/darkgray"
                android:layout_marginVertical="5dp"/>

            <TextView
                android:id="@+id/doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Врач-нейрохихург Надежда Владимировна. Е"
                android:textSize="15sp"
                android:textStyle="normal"
                android:textColor="@color/links"
                android:layout_marginVertical="5dp"/>
            <TextView
                android:id="@+id/hospital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Городская областная №5"
                android:textSize="15sp"
                android:textStyle="normal"
                android:textColor="@color/gray"
                android:layout_marginVertical="5dp"/>
            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Визит подтвержден"
                android:textSize="15sp"
                android:textStyle="normal"
                android:textColor="@color/green"
                android:layout_marginVertical="5dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>